{% extends ':default:index.html.twig' %}

{% block title %}
 User Directory
{% endblock %}

{% block body %}
 {% block navigation %}
        {{ parent() }}
 {% endblock %}
 <div class="container">
   <div class="row">
       <div class="col-md-8">
             <h1>Registered Users</h1>
             {% for user in users %}
               <hr>
               <div class="row">
                <div class="col-md-4">
                    <img src="../uploads/pics/{{ user.profilePic  }}" href="/profiles/{{ user.firstName }}.{{ user.lastName }}"
                         height="50" width="50"/>
                </div> 
                <div class="col-md-8">
                    {{ user.firstName|capitalize }} {{ user.lastName|capitalize }}
                    <br>
                    {{ user.city|capitalize }}, {{ user.country|capitalize }}.
                    <br>
                </div>

               </div>
             {% endfor %}
       </div>
       <!-- Blog Sidebar Widgets Column -->
       <div class="col-md-4">
           {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
               <!-- Logout Well -->
               <div class="well">
                   <h4>Have something to write?</h4>
                   <a class="link" href="{{ path('blog_new') }}">Create new entry</a>
                   <hr>
                   <h4>Logout</h4>
                   <a class="link" href="{{ path('logout') }}">Logout</a>
               </div>
           {% else %}
               <!-- Login and Register Well -->
               <div class="well">
                   <h4>Register</h4>
                   <a class="link" href="{{ path('user_registration') }}">Register</a>
                   <hr>
                   <h4>Login</h4>
                   <a class="link" href="{{ path('login') }}">Login</a>
               </div>

           {% endif %}

           <!-- Blog Categories Well -->
           <div class="well">
               <h4>Blog Categories</h4>
               <div class="row">
                   <div class="col-lg-6">
                       <ul class="list-unstyled">
                           <li><a href="#">Category Name</a>
                           </li>
                           <li><a href="#">Category Name</a>
                           </li>
                           <li><a href="#">Category Name</a>
                           </li>
                           <li><a href="#">Category Name</a>
                           </li>
                       </ul>
                   </div>
                   <!-- /.col-lg-6 -->
                   <div class="col-lg-6">
                       <ul class="list-unstyled">
                           <li><a href="#">Category Name</a>
                           </li>
                           <li><a href="#">Category Name</a>
                           </li>
                           <li><a href="#">Category Name</a>
                           </li>
                           <li><a href="#">Category Name</a>
                           </li>
                       </ul>
                   </div>
                   <!-- /.col-lg-6 -->
               </div>
               <!-- /.row -->
           </div>

           <!-- Blog Search Well -->
           <div class="well">
               <h4>Blog Search</h4>
               <div class="input-group">
                   <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
               </div>
               <!-- /.input-group -->
           </div>

       </div>
   </div>
 </div>



{% endblock %}
